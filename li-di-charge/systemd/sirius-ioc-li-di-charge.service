[Unit]
Description=Soft IOC for Linac Charge reading
After=multi-user.target

[Service]
Group=sirius
User=sirius
Type=simple
WorkingDirectory=/home/sirius/iocs-log
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /home/sirius/iocs-log/env-sirius-ioc-li-di-charge'
EnvironmentFile=-/home/sirius/iocs-log/env-sirius-ioc-li-di-charge
ExecStart=/usr/local/bin/sirius-ioc-li-di-charge.py
