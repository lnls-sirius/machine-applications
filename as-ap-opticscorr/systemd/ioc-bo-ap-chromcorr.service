[Unit]
Description=Soft IOC for BO Chromaticity Correction
After=multi-user.target

[Service]
Group=sirius
User=sirius
Type=simple
WorkingDirectory=/home/sirius/iocs
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/bashrc-sirius-ioc-bo-ap-opticscorr-chrom'
EnvironmentFile=-/tmp/bashrc-sirius-ioc-bo-ap-opticscorr-chrom
ExecStart=/usr/local/bin/sirius-ioc-bo-ap-opticscorr-chrom.py
