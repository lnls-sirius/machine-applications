[Unit]
Description=Soft IOC for SI Tune Correction
After=multi-user.target

[Service]
Group=sirius
User=sirius
Type=simple
WorkingDirectory=/home/sirius/iocs/si-ap-tunecorr
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/bashrc-sirius-ioc-si-ap-tunecorr'
EnvironmentFile=-/tmp/bashrc-sirius-ioc-si-ap-tunecorr
ExecStart=/usr/local/bin/sirius-ioc-si-ap-tunecorr.py
