[Unit]
Description=Soft IOC for SI Tune Correction
After=multi-user.target

[Service]
Group=fac
User=fac
Type=simple
WorkingDirectory=/home/fac/sirius-iocs
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/bashrc-sirius-ioc-si-ap-opticscorr-tune'
EnvironmentFile=-/tmp/bashrc-sirius-ioc-si-ap-opticscorr-tune
ExecStart=/usr/local/bin/sirius-ioc-si-ap-opticscorr-tune.py
