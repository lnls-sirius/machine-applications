[Unit]
Description=Soft IOC for BO-AP-CurrentInfo-Lifetime Calculation
After=multi-user.target

[Service]
Group=fac
User=fac
Type=simple
WorkingDirectory=/home/fac/sirius-iocs/
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/bashrc-sirius-ioc-bo-ap-currinfo-lifetime'
EnvironmentFile=-/tmp/bashrc-sirius-ioc-bo-ap-currinfo-lifetime
ExecStart=/usr/local/bin/sirius-ioc-bo-ap-currinfo-lifetime.py
