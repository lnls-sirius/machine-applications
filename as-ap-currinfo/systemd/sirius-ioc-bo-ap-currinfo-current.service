[Unit]
Description=Soft IOC for BO-AP-CurrentInfo-Current Handling
After=multi-user.target

[Service]
Group=sirius
User=sirius
Type=simple
WorkingDirectory=/home/sirius/iocs/
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/bashrc-sirius-ioc-bo-ap-currinfo-current'
EnvironmentFile=-/tmp/bashrc-sirius-ioc-bo-ap-currinfo-current
ExecStart=/usr/local/bin/sirius-ioc-bo-ap-currinfo-current.py
