[Unit]
Description=Soft IOC for Timing EVG Clocks and Events
After=multi-user.target

[Service]
Group=fac
User=fac
Type=simple
WorkingDirectory=/home/fac/sirius-iocs
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/sirius-ioc-as-ti-events'
EnvironmentFile=-/tmp/sirius-ioc-as-ti-events
ExecStart=/usr/local/bin/sirius-ioc-as-ti-control.py -e
