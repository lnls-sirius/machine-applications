[Unit]
Description=Soft IOC for Timing Booster Triggers
After=multi-user.target

[Service]
Group=sirius
User=sirius
Type=simple
WorkingDirectory=/home/sirius/iocs-log
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/sirius-ioc-bo-ti-trig'
EnvironmentFile=-/tmp/sirius-ioc-bo-ti-trig
ExecStart=/usr/local/bin/sirius-ioc-as-ti-control.py -t trig-bo -i 0.05
