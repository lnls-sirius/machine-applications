[Unit]
Description=Soft IOC for Timing SI Triggers
After=multi-user.target

[Service]
Group=sirius
User=sirius
Type=simple
WorkingDirectory=/home/sirius/iocs
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/sirius-ioc-si-ti-trig'
EnvironmentFile=-/tmp/sirius-ioc-si-ti-trig
ExecStart=/usr/local/bin/sirius-ioc-as-ti-control.py -t trig-si -w 10
