[Unit]
Description=Soft IOC for Operattion Mode
After=multi-user.target

[Service]
Group=sirius
User=sirius
Type=simple
WorkingDirectory=/home/sirius/iocs
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/bashrc-sirius-ioc-as-ap-opmode'
EnvironmentFile=-/tmp/bashrc-sirius-ioc-as-ap-opmode
ExecStart=/usr/local/bin/sirius-ioc-as-ap-opmode.py
