[Unit]
Description=SI Fam Power Supply Diagnostics IOC
After=multi-user.target

[Service]
Group=sirius
User=sirius
Type=simple
WorkingDirectory=/home/sirius/iocs
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/bashrc-sirius-ioc-si-ps-diag-fam'
EnvironmentFile=-/tmp/bashrc-sirius-ioc-si-ps-diag-fam
ExecStart=/usr/local/bin/sirius-ioc-as-ps-diag.py SI Fam ".*"
