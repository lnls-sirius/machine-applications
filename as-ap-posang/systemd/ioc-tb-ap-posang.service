[Unit]
Description=Soft IOC for TB Position and Angle Correction
After=multi-user.target

[Service]
Group=fac
User=fac
Type=simple
WorkingDirectory=/home/fac/sirius-iocs
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/bashrc-sirius-ioc-tb-ap-posang'
EnvironmentFile=-/tmp/bashrc-sirius-ioc-tb-ap-posang
ExecStart=/usr/local/bin/sirius-ioc-tb-ap-posang.py
